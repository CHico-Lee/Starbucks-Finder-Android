<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageview_itemlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:paddingRight="8dp"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_free_breakfast_black_24dp" />


    <TextView
        android:id="@+id/textView_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/imageview_itemlist"
        android:layout_toRightOf="@+id/imageview_itemlist"
        android:layout_toLeftOf="@+id/textView_open"
        android:text="@string/element_text" />

    <TextView
        android:id="@+id/textView_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:text="@string/open" />
</RelativeLayout >